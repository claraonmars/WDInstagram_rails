<div class="container">
	<h1>  Post <%= @post.id %>
</h1>
	<%= link_to 'Back', posts_path %>
	<%= link_to 'Edit', edit_post_path(@post) %>

	<div class="card-img-top">
  <%= cl_image_tag(@post.photo_url) %>
</div>
<div class="card-body">
<p>
  <strong>  <%= @post.author %> </strong>
  <%= @post.caption %>
</p>

<p>
  <strong>Date:</strong>
  <%= @post.created_at.to_formatted_s(:short) %>
</p>
</div>
<p>

</p>
</div>